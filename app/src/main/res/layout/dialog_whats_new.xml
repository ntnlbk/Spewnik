<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whatsnewbackgorund"
    android:orientation="vertical"
    android:paddingBottom="21dp">
    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/myfont"
        android:text="@string/updation"
        android:textColor="@color/C2"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView33"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_width="200dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/myfont"
        android:text="@string/add_new_functions"
        android:textColor="@color/C2"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView34"
        android:layout_marginRight="26dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/myfont"
        android:text='@string/if_you_have_some_propositions'
        android:textColor="@color/C2"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView36"
        android:layout_marginRight="26dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/myfont"
        android:text='@string/new_songs_were_added'
        android:textColor="@color/C2"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="26dp"
        android:fontFamily="@font/myfont"
        android:text='@string/new_possibility_sup'
        android:textColor="@color/C2"
        android:textSize="14sp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/exit_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="26dp"
        android:fontFamily="@font/myfont"
        android:gravity="center_horizontal|end"
        android:text='@string/accept'
        android:textColor="#FFC700"
        android:textSize="18sp"
        android:textStyle="normal" />


</LinearLayout>