<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/whats_new_dialog_background"
    android:orientation="vertical"
    android:paddingBottom="21dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/myfont"
        android:text="@string/update_whats_new"
        android:textColor="@color/C2"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_width="200dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/myfont"
        android:text="@string/whats_new_first_block"
        android:textColor="@color/C2"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/go_to_telegram_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="26dp"
        android:fontFamily="@font/myfont"
        tools:text='@string/whats_new_second_block'
        android:textColor="@color/C12"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginRight="26dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/myfont"
        android:text='@string/new_songs_were_added'
        android:textColor="@color/C2"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="26dp"
        android:fontFamily="@font/myfont"
        android:text='@string/new_possibility_sup'
        android:textColor="@color/C2"
        android:textSize="14sp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/exit_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="26dp"
        android:fontFamily="@font/myfont"
        android:gravity="center_horizontal|end"
        android:text='@string/accept'
        android:textColor="#FFC700"
        android:textSize="18sp"
        android:textStyle="normal" />


</LinearLayout>